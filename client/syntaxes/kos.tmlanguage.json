{
    "version": "",
    "name": "Kerbal Operating System",
    "scopeName": "source.js",
    "patterns": [
        {
            "include": "#statements"
        }
    ],
	"repository": {
		"statements": {
			"patterns": [
				{
					"include": "#instructions"
				},
				{
					"include": "#comment"
				},
				{
					"include": "#declaration"
				},
				{
					"include": "#control-instructions"
				},
				{
					"include": "#punctuation-period"
				}
			]
        },
        "declaration": {
            "patterns": [
                {
                    "include": "#variable-declaration"
                },
                {
                    "include": "#function-declaration"
                },
                {
                    "include": "#lock-declaration"
                },
                {
                    "include": "#parameter-declaration"
                }
            ]
        },
        "control-instructions": {
            "patterns": [
                {
                    "include": "#if-instruction"
                },
                {
                    "include": "#until-instruction"
                },
                {
                    "include": "#from-instruction"
                },
                {
                    "include": "#when-instruction"
                },
                {
                    "include": "#break-instruction"
                },
                {
                    "include": "#return-instruction"
                },
                {
                    "include": "#for-instruction"
                },
                {
                    "include": "#on-instruction"
                },
                {
                    "include": "#toggle-instruction"
                },
                {
                    "include": "#wait-instruction"
                }
            ]
        },
        "comment": {
            "name": "comment.line.double-slash.ks",
            "begin": "(//)",
            "beginCaptures": {
                "0": {
                    "name": "comment.line.double-slash.ks"
                }
            },
            "contentName": "comment.line.comment",
            "end": "\\n"
        },
        "string": {
            "name": "string.ks",
            "begin": "\"",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.string.begin.ks"
                }
            },
            "end": "\"",
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.string.end.ks"
                }
            }
        },
        "literal": {
            "patterns": [
                {
                    "include": "#numeric-literal"
                },
                {
                    "include": "#boolean-literal"
                }
            ]
        },
        "numeric-literal": {
            "patterns": [
                {
                    "name": "constant.numeric.integer",
                    "match": "\\b[0-9]((?[0-9]|(_))*[0-9])\\b"
                },
                {
                    "name": "constant.numeric.double",
                    "match": "\b([0-9]((?[0-9]|(_))*[0-9]))?"
                }
            ]
        },
        "punctuation-period": {
            "name": "punctuation.terminator.instruction.ks",
            "match": "(\\.)\\b"
        }
	}
}