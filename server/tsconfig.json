{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "out",
    "rootDir": "src",
    "tsBuildInfoFile": "./build/buildcache.json",
    "lib": ["es2015", "esnext.asynciterable"],
    "sourceMap": true,
    "strict": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/test"
  ],
}
