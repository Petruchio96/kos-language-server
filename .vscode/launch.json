{
  "version": "0.2.0",
  "configurations": [
    {
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch VSCode Client",
			"runtimeExecutable": "${execPath}",
			"env": {
				"NODE_ENV": "dev"
			},
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/clients/vscode/out/**/*.js"],
			"preLaunchTask": "npm: dev"
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch VSCode Client Prod",
			"runtimeExecutable": "${execPath}",
			"env": {
				"NODE_ENV": "prod"
			},
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/clients/vscode/dist/**/*.js"],
			"preLaunchTask": "npm: prod"
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch VSCode Client Fast",
			"runtimeExecutable": "${execPath}",
			"env": {
				"NODE_ENV": "dev"
			},
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/clients/vscode/out/**/*.js"],
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch LSP",
			"program": "${workspaceRoot}/server/out/server.js",
			"args": [
				"--stdio"
			],
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/server/out/**/*.js"],
			"preLaunchTask": "npm: dev:server"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Server",
			"address": "localhost",
			"protocol": "inspector",
			"timeout": 60000,
			"port": 6009,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/server/out/**/*.js"]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Server Prod",
			"address": "localhost",
			"protocol": "inspector",
			"timeout": 60000,
			"port": 6009,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/server/dist/**/*.js"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest All",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"env": {
				"NODE_ENV": "dev"
			},
			"args": [
				"--runInBand",
				"--config",
				"${workspaceFolder}/server/jest.config.js"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"disableOptimisticBPs": true,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/server/out/**/*.js"
			],
			"windows": {
				"program": "${workspaceFolder}/node_modules/jest/bin/jest",
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Jest Current File",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"env": {
				"NODE_ENV": "dev"
			},
			"args": [
				"${fileBasenameNoExtension}",
				"--runInBand",
				"--config",
				"${workspaceFolder}/server/jest.config.js"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"disableOptimisticBPs": true,
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/server/out/**/*.js"
			],
			"windows": {
				"program": "${workspaceFolder}/node_modules/jest/bin/jest",
			}
		},
	],
	"compounds": [
		{
			"name": "VSCode + Server Prod",
			"configurations": ["Launch VSCode Client Prod", "Attach to Server Prod"]
		},
		{
			"name": "VSCode + Server",
			"configurations": ["Launch VSCode Client", "Attach to Server"]
		},
		{
			"name": "VSCode + Server Fast",
			"configurations": ["Launch VSCode Client Fast", "Attach to Server"]
		}
	]
}
