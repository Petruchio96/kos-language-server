{
  "name": "kos-extension",
  "version": "1.0.0",
  "description": "kos vscode extension",
  "main": "index.js",
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "watch": "node ./node_modules/typescript/bin/tsc -w -p ./src",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "repository": {
    "type": "git",
		"url": "https://github.com/jonnyboyC/kos-language-server"
  },
  "contributes": {
    "languages": [{
			"id": "kos",
			"aliases": ["Kerbal Operating System", "kos"],
			"extensions": [".ks"],
			"configuration": "./kos.configuration.json"
    }],
    "grammars": [{
      "language": "kos",
      "scopeName": "source.kos",
      "path": "./syntaxes/kos.tmLanguage.json"
    }],
	},
  "keywords": [
    "kos",
    "ksp",
    "language-server"
  ],
  "author": "John Chabot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jonnyboyC/kos-language-server/issues"
  },
  "homepage": "https://github.com/jonnyboyC/kos-language-server#readme"
}
