{
  "name": "kos-extension",
  "version": "1.0.0",
  "description": "kos vscode extension",
  "main": "./build/client/extension.js",
  "scripts": {
    "info": "npm-scripts-info",
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile:client": "tsc -p ./client/tsconfig.json",
    "compile:server": "tsc -p ./server/tsconfig.json",
    "lint:client": "tslint -p ./client/tslint.json",
    "lint:server": "tslint -p ./server/tslint.json",
    "watch:client": "tsc -w -p ./client/tsconfig.json",
    "watch:server": "tsc -w -p ./server/tsconfig.json",
    "lint": "npm run lint:client && npm run lint:server",
    "compile": "npm run compile:client && npm run compile:server",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "scripts-info": {
    "info": "Display information about the package scripts",
    "compile": "build the project",
    "lint": "lint the project",
    "watch": "Watch and rebuild the project on save"
  },
  "engines": {
    "vscode": "^1.26.0"
  },
  "publisher": "johnChabot",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonnyboyC/kos-language-server"
  },
  "activationEvents": [
    "onLanguage:kos"
  ],
  "contributes": {
    "languages": [
      {
        "id": "kos",
        "aliases": [
          "Kerbal Operating System",
          "kos"
        ],
        "extensions": [
          ".ks"
        ],
        "configuration": "./kos.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "kos",
        "scopeName": "source.kos",
        "path": "./syntaxes/kos.tmLanguage.json"
      }
    ]
  },
  "keywords": [
    "kos",
    "ksp",
    "language-server"
  ],
  "author": "John Chabot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jonnyboyC/kos-language-server/issues"
  },
  "homepage": "https://github.com/jonnyboyC/kos-language-server#readme",
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "typescript": "^3.0.3",
    "tslint": "^5.10.0"
  }
}
